<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="app" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <non-jta-data-source>java:comp/env/jdbc/contdb_dev</non-jta-data-source>
        <class>app.entity.InvalidatedToken</class>
        <class>app.entity.UserRole</class>
        <class>app.entity.ApplicationUser</class>
        <class>app.entity.User</class>
        <class>app.entity.AuditLog</class>
        <class>app.entity.Login</class>
        <class>app.entity.View</class>
        <class>app.entity.RoleSecurable</class>
        <class>app.entity.Securable</class>
        <class>app.entity.UserSecurable</class>
        <class>app.entity.Device</class>
        <class>app.entity.Role</class>
        <class>app.entity.Application</class>
        <properties>
            <property name="eclipselink.ddl-generation" value="none"/>
            <property name="cronapp.diagram.namespace" value="app"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="app_oracle" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <non-jta-data-source>java:comp/env/jdbc/oracle_dev</non-jta-data-source>
        <class>app_oracle.entity.Produtocontagem</class>
        <class>app_oracle.entity.Estoquecontagem</class>
        <properties>
            <property name="eclipselink.ddl-generation" value="none"/>
            <property name="cronapp.diagram.namespace" value="app_oracle"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="app_cont" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <non-jta-data-source>java:comp/env/jdbc/contdb_dev</non-jta-data-source>
        <class>app_cont.entity.Produto</class>
        <class>app_cont.entity.Contagem</class>
        <class>app_cont.entity.Estoque</class>
        <class>app_cont.entity.Loja</class>
        <class>app_cont.entity.Formulario1</class>
        <class>app_cont.entity.Formulario2</class>
        <properties>
            <property name="eclipselink.ddl-generation" value="none"/>
            <property name="cronapp.diagram.namespace" value="app_cont"/>
        </properties>
    </persistence-unit>
</persistence>
